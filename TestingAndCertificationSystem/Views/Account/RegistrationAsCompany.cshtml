@model TestingAndCertificationSystem.ViewModels.RegistrationAsCompanyViewModel

    <body style="background-image: url('../images/login_bg.jpg'); background-size:cover">
        <div class="container">
            <div class="row">
                <div class="col-md-9 mx-auto">
                    <div class="card" style="top:10%">
                        <div class="card-body">
                            <div class="card-block text-center">
                            <h3 class="card-title">Register as company</h3>
                            <a class="btn-link" asp-controller="Account" asp-action="RegistrationAsUser">Register as user</a>
                            <br />
                            <br />
                        </div>
                            <form method="post" asp-controller="Account" asp-action="RegistrationAsCompany">
                                <div class="container">
                                    <div class="row align-items-start">
                                        <div class="col">
                                            <div class="mb-3">
                                                <h5>User info</h5>
                                            </div>
                                            <div class="mb-3">
                                                <div>
                                                    <input asp-for="user.FirstName" type="text" class="form-control" placeholder="First Name">
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <div>
                                                    <input asp-for="user.LastName" type="text" class="form-control" placeholder="Last Name">
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <div>
                                                    <input asp-for="user.City" type="text" class="form-control" placeholder="City">
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <div>
                                                    <input asp-for="user.Email" type="email" class="form-control" placeholder="Email">
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <div>
                                                    <input asp-for="user.Phone" type="tel" class="form-control" placeholder="Phone">
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <div>
                                                    <input asp-for="user.Description" type="text" class="form-control" placeholder="Description">
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <div>
                                                    <input asp-for="user.Password" type="password" class="form-control" placeholder="Password">
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <div>
                                                    <input asp-for="user.PasswordConfirm" type="password" class="form-control" placeholder="Confirm password">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="mb-3">
                                                <h5>Company info</h5>
                                            </div>
                                            <div class="mb-3">
                                                <div>
                                                    <input asp-for="company.FullName" type="text" class="form-control" placeholder="Full name">
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <div>
                                                    <input asp-for="company.ShortName" type="text" class="form-control" placeholder="Short name">
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <div>
                                                    <input asp-for="company.EstablishmentDate" type="date" class="form-control" placeholder="Establishment date">
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <div>
                                                    <input asp-for="company.Description" type="text" class="form-control" placeholder="Description">
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <div>
                                                    <input asp-for="company.WebsiteUrl" type="text" class="form-control" placeholder="Website">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="mb-3">
                                                <h5>&nbsp</h5>
                                            </div>
                                            <img src="../images/register_temp.png" />
                                            <br>
                                            <br />
                                            <div asp-validation-summary="All" class="alert-danger"></div>
                                            <div class="card-block text-center">
                                                <input type="submit" class="btn btn-primary btn-block" value="Register" />
                                                <br />
                                                <p>
                                                    Already have an account?
                                                    <a class="btn-link" asp-controller="Account" asp-action="Login">Login</a>
                                                </p>
                                                <p>&copy 2021 Developed by KI-17022</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>