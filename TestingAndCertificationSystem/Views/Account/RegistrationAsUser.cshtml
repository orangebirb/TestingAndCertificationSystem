@model TestingAndCertificationSystem.ViewModels.RegistrationViewModel

    <body style="background-image: url('../images/login_bg.jpg'); background-size:cover">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mx-auto">
                    <div class="card" style="top:10%">
                        <div class="card-body">

                            <div class="card-block text-center">
                                <h3 class="card-title">Register</h3>
                                <a class="btn-link" asp-controller="Account" asp-action="RegistrationAsCompany">Register as company</a>
                                <br />
                                <br />
                            </div>

                            <form method="post" asp-controller="Account" asp-action="RegistrationAsUser">
                                <div asp-validation-summary="All" class="alert-danger"></div>
                                <div class="mb-3">
                                    <div>
                                        <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name">
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div>
                                        <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name">
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div>
                                        <input asp-for="City" type="text" class="form-control" placeholder="City">
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div>
                                        <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div>
                                        <input asp-for="Phone" type="text" class="form-control" placeholder="Phone">
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div>
                                        <input asp-for="Description" type="text" class="form-control" placeholder="Description">
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div>
                                        <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div>
                                        <input asp-for="PasswordConfirm" type="password" class="form-control" placeholder="Confirm password">
                                    </div>
                                </div>

                                <div class="card-block text-center">
                                    <input type="submit" class="btn btn-primary btn-block" value="Register" />
                                    <br />
                                    <p>
                                        Already have an account?
                                        <a class="btn-link" asp-controller="Account" asp-action="Login">Login</a>
                                    </p>
                                    <p>&copy 2021 Developed by KI-17022</p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</body>