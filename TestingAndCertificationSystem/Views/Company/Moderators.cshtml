@using TestingAndCertificationSystem.Resources;
@model PaginationGeneric<UserIdentity>

<div class="col-md-10">
    <h2 class="text-gradient-orange2">Company moderators</h2>
    &nbsp;&nbsp;&nbsp;&nbsp;
    <i class="fas fa-caret-left orange1"></i>
    <a class="btn-link orange1" asp-controller="Company" asp-action="SearchModerators">
        Add new moderators
    </a>
    <br />
    <br />
</div>

@if (Model.source.Count() == 0)
{
    <div class="col-md-10">
        <div class="alert alert-info" role="alert">
            There are no moderators in the company
        </div>
    </div>
}
else
{
    <table class="table">
        <tr>
            <th class="text-gradient-orange2"><a asp-action="Moderators" asp-route-sortOrder="@ViewBag.NameSortParm">Name</a></th>
            <th class="text-gradient-orange2"><a asp-action="Moderators" asp-route-sortOrder="@ViewBag.CitySortParm">City</a></th>
            <th class="text-gradient-orange1">Phone</th>
            <th class="text-gradient-orange1">Email</th>
            <th></th>
        </tr>
        @foreach (var user in Model.source)
        {
            <tr>
                <td>@user.FirstName&nbsp;@user.LastName</td>
                <td>@user.City</td>
                <td>@user.Phone</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="RemoveModerator" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger"> Remove </button>
                    </form>
                </td>
            </tr>
        }
    </table>

    var previousDisabled = !Model.pagination.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.pagination.HasNextPage ? "disabled" : "";

    <a asp-action="Moderators"
       asp-route-page="@(Model.pagination.PageNum - 1)"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       class="btn text-gradient-orange2 border-orange2 @previousDisabled">
        Previous
    </a>

    <small>Page @ViewBag.Page of @ViewBag.PageCount</small>

    <a asp-action="Moderators"
       asp-route-page="@(Model.pagination.PageNum + 1)"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       class="btn text-gradient-orange2 border-orange2 @nextDisabled">
        Next
    </a>
}