@model IEnumerable<TestingAndCertificationSystem.Models.UserIdentity>

<h2>Company moderators</h2>

<table class="table">
    <tr><th>Name</th><th>Surname</th><th>Company id</th><th>Email</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.CompanyId</td>
            <td>@user.Email</td>
                        <td>
                <form asp-action="RemoveModerator" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger"> Remove </button>
                </form>
            </td>
        </tr>
    }
</table>