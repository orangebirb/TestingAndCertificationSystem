@model TestingAndCertificationSystem.Company
@{
    ViewBag.Title = "Edit company information";
}

@if (ViewBag.successMessage != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.successMessage
    </div>
}

<div asp-validation-summary="ModelOnly" class="alert-danger"></div>

<form asp-action="Edit" asp-controller="Company">

    <div class="form-group" hidden>
        <input type="text" asp-for="Id" class="form-control" readonly="readonly" />
    </div>

    <div class="form-group">
        <label asp-for="FullName" class="control-label">Full name</label>
        <input type="text" asp-for="FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ShortName" class="control-label">Short name</label>
        <input type="text" asp-for="ShortName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EstablishmentDate" class="control-label">Establishment date</label>
        <input type="date" asp-for="EstablishmentDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="WebsiteUrl" class="control-label">Website url</label>
        <input type="text" asp-for="WebsiteUrl" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>