@model TestingAndCertificationSystem.ViewModels.CreateTestViewModel
@{
    ViewBag.Title = "Creating test";
}

@if (ViewBag.successMessage != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.successMessage
    </div>
}

<ul class="nav nav-tabs" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Create new test</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Add extra task</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Privacy settings</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
        <form asp-action="CreateTest" asp-controller="Tests">
            <div asp-validation-summary="All" class="alert-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <input type="text" asp-for="Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DurationInMinutes" class="control-label">Duration in minutes</label>
                <input type="number" asp-for="DurationInMinutes" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Certificate" class="control-label">Certificate</label>
                <input type="checkbox" asp-for="Certificate" class="form-check" />
            </div>
            <div class="form-group">
                <label asp-for="Instruction" class="control-label">Instruction</label>
                <input type="text" asp-for="Instruction" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="IsPrivate" class="control-label">Is private</label>
                <input type="checkbox" asp-for="IsPrivate" class="form-check" />
            </div>
            <div class="form-group">
                <label asp-for="PassingMarkInPercents" class="control-label">Mark</label>
                <input type="number" asp-for="PassingMarkInPercents" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">...</div>
    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">...</div>
</div>
