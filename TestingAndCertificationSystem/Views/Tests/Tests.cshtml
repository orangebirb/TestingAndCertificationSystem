@model List<TestingAndCertificationSystem.Test>

<h2>Tests</h2>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Duration</th>
        <th>Is active</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var test in Model)
    {
        <tr>
            <td>@test.Name</td>
            <td>@test.Description</td>
            <td>@test.DurationInMinutes min</td>
            <td>
                @{
                    if (test.IsActive == true)
                    {
                        <form asp-controller="Tests" asp-action="ChangeActivityStatusTest" asp-route-testId="@test.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger"> Deactivate </button>
                        </form>
                    }
                    else
                    {
                        <form asp-controller="Tests" asp-action="ChangeActivityStatusTest" asp-route-testId="@test.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-success"> Activate </button>
                        </form>
                    }
                }
            </td>
            <td>
                <form asp-controller="Tests" asp-action="TestInfopage" asp-route-testId="@test.Id">
                    <button type="submit" class="btn btn-sm btn-info"> View details </button>
                </form>
            </td>
            <td>
                <form asp-controller="Tests" asp-action="DeleteTest" asp-route-testId="@test.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger"> Delete </button>
                </form>
            </td>
        </tr>
    }
</table>