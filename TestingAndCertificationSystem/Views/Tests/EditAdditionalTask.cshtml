@model TestingAndCertificationSystem.AdditionalTask
@{
    ViewBag.Title = "Editing additional task";
}

@if (ViewBag.successMessage != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.successMessage
    </div>
}
<a class="arrow" asp-controller="Tests" asp-action="TestInfopage" asp-route-testId="@TempData["testId"]">Return to test</a>

<form asp-action="EditAdditionalTask" asp-controller="Tests">
    <div asp-validation-summary="All" class="alert-danger"></div>

    <input type="text" asp-for="Id" class="form-control" readonly="readonly" hidden="hidden" />
    <input type="text" asp-for="RecipientEmail" class="form-control" readonly="readonly" hidden="hidden" />

    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <textarea type="text" asp-for="Description" rows="3" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Text" class="control-label">Text</label>
        <textarea type="text" asp-for="Text" rows="5" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="ExpirationDate" class="control-label">Expiration Date</label>
        <input type="date" asp-for="ExpirationDate" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Save changes" class="btn btn-primary" />
    </div>
</form>
