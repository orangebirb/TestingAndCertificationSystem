@model TestingAndCertificationSystem.AdditionalTask
@{
    ViewBag.Title = "Edit additional task";
}

<div class="col-md-10">
    <h2 class="text-gradient-orange2">Edit additional task</h2>
    &nbsp;&nbsp;&nbsp;&nbsp;
    <i class="fas fa-caret-left orange1"></i>
    <a class="btn-link orange1" asp-controller="Tests" asp-action="TestInfopage" asp-route-testId="@TempData["testId"]">
        Back to test information
    </a>
    <br />
    <br />

    @if (ViewBag.successMessage != null)
    {
        <div class="alert alert-success" role="alert">
            @ViewBag.successMessage
        </div>
    }

    <form asp-action="EditAdditionalTask" asp-controller="Tests">
        <div asp-validation-summary="All" class="alert-danger"></div>

        <input type="text" asp-for="Id" class="form-control" readonly="readonly" hidden="hidden" />
        <input type="text" asp-for="RecipientEmail" class="form-control" readonly="readonly" hidden="hidden" />

        <div class="form-group">
            <label class="control-label text-gradient-orange2 font-weight-bold">Name</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label text-gradient-orange2 font-weight-bold">Text</label>
            <textarea type="text" asp-for="Text" rows="5" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label class="control-label text-gradient-orange2 font-weight-bold">Expiration Date</label>
            <input type="date" asp-for="ExpirationDate" class="form-control" />
        </div>

        <div class="form-group">
            <input type="submit" value="Save changes" class="btn btn-success" />
        </div>
    </form>

</div>