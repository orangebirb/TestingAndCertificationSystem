@model TestingAndCertificationSystem.Test
@{
    ViewBag.Title = "Editing test";
}

@if (ViewBag.successMessage != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.successMessage
    </div>
}

<form asp-action="EditTest" asp-controller="Tests">
    <div asp-validation-summary="All" class="alert-danger"></div>

    <input type="text" asp-for="Id" class="form-control" readonly="readonly" hidden="hidden" />
    <input type="text" asp-for="TestAuthorId" class="form-control" readonly="readonly" hidden="hidden" />

    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DurationInMinutes" class="control-label">Duration in minutes</label>
        <input type="number" asp-for="DurationInMinutes" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Certificate" class="control-label">Certificate</label>
        <input type="checkbox" asp-for="Certificate" class="form-check" />
    </div>
    <div class="form-group">
        <label asp-for="Instruction" class="control-label">Instruction</label>
        <input type="text" asp-for="Instruction" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IsPrivate" class="control-label">Is private</label>
        <input type="checkbox" asp-for="IsPrivate" class="form-check" />
    </div>
    <div class="form-group">
        <label asp-for="PassingMarkInPercents" class="control-label">Mark</label>
        <input type="number" asp-for="PassingMarkInPercents" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Continue" class="btn btn-primary" />
    </div>
</form>
