@model TestingAndCertificationSystem.AdditionalTask
@{
    ViewBag.Title = "Additional task";
}

<a class="arrow" asp-controller="Tests" asp-action="Tests">Skip and go to tests</a>

<form asp-action="CreateAdditionalTask" asp-controller="Tests">
    <div asp-validation-summary="All" class="alert-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Text" class="control-label">Text</label>
        <input type="text" asp-for="Text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ExpirationDate" class="control-label">Expiration Date</label>
        <input type="date" asp-for="ExpirationDate" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary", asp-route-testId="@TempData["testId"]"/>
    </div>
</form>
